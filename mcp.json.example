{
  "mcpServers": {
    "database": {
      "// 本地开发 - 使用源码运行": "",
      "command": "dotnet",
      "args": ["run", "--project", "path/to/DatabaseMcpServer"],
      "env": {
        "DB_CONNECTION_STRING": "Server=localhost;Database=test;Uid=root;Pwd=password;",
        "DB_TYPE": "MySql",
        "SEQ_SERVER_URL": "http://localhost:5341",
        "SEQ_API_KEY": "your-seq-api-key"
      }
    },

    "database-nuget": {
      "// NuGet 包部署": "",
      "command": "dnx",
      "args": ["DatabaseMcpServer", "--version", "1.0.3", "--yes"],
      "env": {
        "DB_CONNECTION_STRING": "Server=localhost;Database=prod;Uid=root;Pwd=prod_password;",
        "DB_TYPE": "MySql"
      }
    },

    "database-exe": {
      "// 可执行文件部署": "",
      "command": "DatabaseMcpServer.exe",
      "env": {
        "DB_CONNECTION_STRING": "Server=localhost;Database=myapp;Uid=root;Pwd=mypassword;",
        "DB_TYPE": "MySql"
      }
    }
  },

  "// 数据库配置示例": {
    "MySQL": {
      "DB_CONNECTION_STRING": "Server=localhost;Port=3306;Database=mydb;User=root;Password=123456;",
      "DB_TYPE": "MySql"
    },

    "SQL Server": {
      "DB_CONNECTION_STRING": "Server=localhost;Database=mydb;User Id=sa;Password=123456;",
      "DB_TYPE": "SqlServer"
    },

    "SQLite": {
      "DB_CONNECTION_STRING": "Data Source=mydb.db;",
      "DB_TYPE": "Sqlite"
    },

    "PostgreSQL": {
      "DB_CONNECTION_STRING": "Host=localhost;Port=5432;Database=mydb;Username=postgres;Password=123456;",
      "DB_TYPE": "PostgreSQL"
    },

    "Oracle": {
      "DB_CONNECTION_STRING": "Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=localhost)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=orcl)));User Id=system;Password=123456;",
      "DB_TYPE": "Oracle"
    }
  },

  "// 环境变量说明": {
    "DB_CONNECTION_STRING": "数据库连接字符串（必需）",
    "DB_TYPE": "数据库类型：MySql, SqlServer, Sqlite, PostgreSQL, Oracle（可选，默认MySql）",
    "SEQ_SERVER_URL": "Seq日志服务器地址（可选）",
    "SEQ_API_KEY": "Seq API密钥（可选）"
  },

  "// 使用说明": {
    "1": "复制此文件到你的IDE配置目录",
    "2": "VS Code: <WORKSPACE>/.vscode/mcp.json",
    "3": "Visual Studio: <SOLUTION>/.mcp.json",
    "4": "修改连接字符串和数据库类型",
    "5": "选择合适的部署方式（本地开发/NuGet包/可执行文件）",
    "6": "重启IDE或重新加载MCP配置"
  }
}
